<table id="bookings" class="table hover table-bordered hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Office Location</th>
            <th>From Date</th>
            <th>Till Date</th>
            <th>Time In</th>
            <th>Time Out</th>
            <th>Generator Type</th>
            <th>KVA</th>
            <th>LISP</th>
            <th>Status</th>
            <th>Client</th>
            <th>Vendor Id</th>
            <th>Rep Id</th>
            <th>Duty Slip</th>
            <% if current_user.is_approver? or current_user.is_spoc? %>
            <th>Actions</th>
            <% end %>
        </tr>
    </thead>
        <% @bookings.each do |booking| %>
          <tr>
            <td><a class="booking_id"> <%= booking.id %> </a></td>
            <td><%= booking.name %></td>
            <td><%= booking.location %></td>
            <td><%= booking.start_date %></td>
            <td><%= booking.end_date %></td>
            <td><%= booking.time_in %></td>
            <td><%= booking.time_out %></td>
            <td><%= booking.gen_type %></td>
            <td><%= booking.kva %></td>
            <td><a class="lisp_id"><%= booking.lisp %></a></td>
            <td><%= booking.status %></td>
            <td><%= booking.client.name %></td>
            <td>
            <% if booking.vendor.present? %>
                <%= booking.vendor.name %>
            <% end %>
            </td>
            <td>
            <% if booking.rep.present? %>
                <a class="rep_id"><%= booking.rep.id %></a>
            <% end %>
            </td>
            <td>
            <% if booking.slip.present? %>
                <%= link_to "Download", booking.slip_url %>
            <% else %>
                No Duty Slip
            <% end %>
            </td>

            <% if current_user.is_approver? and booking.status == "pending" %>
            <td><button class="approve_btn">Approve</button></td>
            <% elsif current_user.is_spoc? and booking.status == "pending" %>
            <td><button class="cancel_btn">Cancel</button></td>
            <%elsif current_user.is_approver? or current_user.is_spoc? %>
            <td>N/A</td>
            <% end %>
          </tr>
        <% end %>

    <tbody>
    </tbody>
</table>

<script type="text/javascript">

    $(".booking_id").on('click', function(event) {
        id = $(this).text()
        location = '/bookings/' + id.trim();
    })

    $(".lisp_id").on('click', function(event) {
        id = $(this).text()
        location = '/lisps/unknown?code=' + id.trim();
    })

    $(".rep_id").on('click', function(event) {
        id = $(this).text()
        location = '/users/' + id.trim();
    })

    $(".cancel_btn").on('click', function(){
      id = $(this).parent().parent().find('td').first().text()
      cancel_url = "/bookings/" + id + "/cancel"
      $.ajax({
        url: cancel_url
      }).done( function(){
        location.reload()
      });
    });
</script>