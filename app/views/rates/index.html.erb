<div id="create-modal">
    <div class="modal fade" id="createRate" tabindex="-1" role="dialog">
  		<div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Add new Rate</h4>
	      </div>
	      <div class="modal-body">
	        <div class="form-group">
	          <label for="name">State</label>
	          <select name="state">
				<% @states.each |key, value| %>
				<option value="<%= key %>"><%= value%></option>
				<% end %>
			  </select>
	        </div>
	        <div class="form-group">
	          <label for="location">City</label>
	          <select name="city">
				<% @cities.each |key, value| %>
				<option value="<%= key %>"><%= value%></option>
				<% end %>
			  </select>
	        </div>

	        <div class="form-group">
	          <label for="location">Rate</label>
	          <input type="text" class="form-control" id="rate">
	        </div>

	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary" id="save_owner">Save changes</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
</div>
<div class="container main-content">

    <div class="row">
    <div class="col-md-3">
        <button type="button" class="btn btn-primary create-booking" data-toggle="modal" data-target="#createOwner">
            Create New Rate
        </button>
    </div>

    <div class="col-md-9">
        <div class="row">
			<table class="table hover table-bordered" cellspacing="0" width="100%">                         
			  <thead>
		        <tr>
		            <th>State</th>
		            <th>City</th>
		            <th>Rate</th>
		        </tr>
			  </thead>
				<% @locations.each do |location| %>
				  <tr>
				    <td><%= location.state %></td>
				    <td><%= location.city %></td>
				    <td><%= location.fixed %></td>
				  </tr>
				<% end %>
			</table> 
        </div>
    </div>

</div>
