<div class="modal fade" id="createUser" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add new User</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="user_name">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="user_location">
        </div>

        <div class="form-group">
          <label for="name">Phone number</label>
          <input type="text" class="form-control" id="user_phone_number">
        </div>
        <div class="form-group">
          <label for="location">Email</label>
          <input type="text" class="form-control" id="user_email">
        </div>

        <div class="form-group">
          <label for="location">Employee Id</label>
          <input type="text" class="form-control" id="user_employee_id">
        </div>

        <div class="form-group">
          <label for="sel1">Select User Type</label>
          <select class="form-control" id="role_type">
            <option>Employee</option>
            <option>Admin</option>
            <option>SPOC</option>
            <option>Approver</option>
          </select>
        </div>

        <div class="form-group" id="subgroup_select">
            <label for="sel1">Group</label>
            <select  class="selectdd" id="user_subgroup_id">
            <option selected disabled>Select Group</option>
            <% @subgroups.each do |subgroup| %>
              <option value=<%=subgroup.id%> > <%=subgroup.name%> </option>
            <% end %>
            </select>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save_user">Submit</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript">
  $(".selectdd").select2();
  $("#role_type").change(function(){
    if($("#role_type").val() == "SPOC") {
      $("#subgroup_select").show()
    } else {
      $("#subgroup_select").hide()
    }
  })
  $("#subgroup_select").hide()
</script>