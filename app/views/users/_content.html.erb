<div>
  <%= render "users/modal" %>
</div>
<div class="row users_content">
    <div class="col-md-3">
        <div class="list-group">
            <a class="list-group-item active" id="admin">Admin</a>
            <a class="list-group-item " id="spoc">SPOC</a>
            <a class="list-group-item " id="approver">Approver</a>
            <a class="list-group-item " id="employee">Employee</a>
        </div>
        <div>
        <% if current_user.is_admin? %>
            <button type="button" class="btn btn-primary create-booking" data-toggle="modal" data-target="#createUser">
                Add Employee
            </button>
        <% end %>
        <% if current_user.is_admin_or_owner? %>
          <button class="btn btn-primary" style="width: 100%" onclick="window.location = '/mappings?client_id=' + window.clientId ">Manage Mappings</button>
        <% end %>
        </div>
    </div>
    

    <div class="col-md-9">
        <div class="row">
			<%= render "users/table.html.erb" %>
        </div>
    </div>

</div>

<script type="text/javascript">
    $("#users").on('click', 'tr', function(){
        id = $(this).find('td').first().text()
        if(id) {
            window.location = '/users/' + id;
        }
    })

</script>